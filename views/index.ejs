<%- include('./templates/head.ejs') %>
    <link rel="stylesheet" href="\css\client\home.css">
</head>

<body>
<%- include('./templates/nav-bar.ejs') %>

            
           
                <main class="home-posts">
                    <% if (posts.length > 0) { %> 
                        <div class="latest-post box">
                            <a href="/post/<%= posts[0].id %>"><img src="<%= posts[0].img %>" alt="image"></a>
                            <a href="/post/<%= posts[0].id %>"><h2><%= posts[0].title %></h2></a>
                            <p><%= posts[0].firstParagraph %> </p>
                            
                        </div>

                        <% for(let i = 1; i < posts.length; i++) { %>
                            <div class="box">
                                <a href="/post/<%= posts[i].id %>"><img src="<%= posts[i].img %>" alt="image"></a>
                                <a href="/post/<%= posts[i].id %>"><h2><%= posts[i].title %></h2></a>
                                <p><%= posts[i].firstParagraph %> </p>
                                
                            </div>
                            
                        <% } %>
                        <div class="invisible"></div>
                    <% } else { %>   
                        <h2>SUA BUSCA N√ÉO ENCONTROU NENHUMA POSTAGEM.</h2>
                    <% } %> 
                <div class="top-posts-box">
                       
                        <img src="https://adstudio.cloud/images/advetisments/multiple-slides/y-n_saas_online_platform_600x500.png" alt="ad">
                        
                    </div>  
                    <% if (posts.length >= 12) { %> 

                        <div class="load-more btn">
                            <button type="button">Carregar Mais</button>
                        </div>
                        
                        <% } %> 
                </main>
                

       <script src="\js\home.js"></script>
<%- include('./templates/footer.ejs') %>
    </body>

    

</html>